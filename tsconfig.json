{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "include": ["src/**/*", "src/stories"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "example",
    "scripts",
    "drafts",
    "rollup.config.js"
  ],
  "awesomeTypescriptLoaderOptions": {
    "errorsAsWarnings": true,
    "silent": true,
    "transpileOnly": true
  }
}
